<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#380202"
    android:id="@+id/itemcontaner"
    >

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titletxt2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:maxLines="2"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/pic1"
        app:layout_constraintStart_toStartOf="@+id/pic1"
        app:layout_constraintTop_toBottomOf="@id/pic1" />

    <ImageView
        android:id="@+id/imageViewstar"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/titletxt2"
        app:layout_constraintTop_toBottomOf="@id/titletxt2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/min_star"
        app:tint="#ffc107" />

    <TextView
        android:id="@+id/scoretxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Score"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewstar"
        app:layout_constraintTop_toBottomOf="@+id/titletxt2" />

</androidx.constraintlayout.widget.ConstraintLayout>