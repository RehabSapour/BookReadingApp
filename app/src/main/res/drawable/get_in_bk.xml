<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:startColor="#ff8080"
                android:endColor="#F25F54"
                android:type="linear"
                android:angle="360" />
            <size android:height="24dp" android:width="24dp" />
            <stroke
                android:width="0.5dp"
                android:color="#ff8080" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:startColor="#ff8080"
                android:endColor="#621212"
                android:type="linear"
                android:angle="360" />
            <size android:height="24dp" android:width="24dp" />
            <stroke
                android:width="0.5dp"
                android:color="#ff8080" />
        </shape>
    </item>
</selector>